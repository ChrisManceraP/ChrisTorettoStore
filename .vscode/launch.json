// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Iniciar Chrome para localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: start"
    },
    {
      "name": "SWA: Run FacturaProveedores.Web",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      "preLaunchTask": "npm: start",
      "webRoot": "${workspaceFolder}/",
      "timeout": 30000
    }
  ]
}
